type User {
  id: ID! @id
  firstName: String
  lastName: String
  password: String!
  token: String @unique
  tempToken: String @unique
  resetTokenExpiry: Float
  userName: String @unique
  email: String! @unique
  profilePicture: String
  location: Location
  items: [Item]
  isAdmin: Boolean! @default(value: false)
  isVerified: Boolean @default(value: false)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Location {
  id: ID! @id
  number: Int!
  street: String!
  city: String!
  country: String!
  postalCode: Int!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

enum Category {
  WOMEN
  MEN
  CHILDREN
  HOME
}

enum Type {
  CLOTHES
  SHOES
  ACCESSORIES
  DECORATION
}

enum Condition {
  NEW
  VG_CONDITION
  G_CONDITION
}

type Item {
  id: ID! @id @unique
  title: String!
  description: String!
  imagesUrl: [String] @scalarList(strategy: RELATION)
  price: Float!
  user: User
  condition: [Condition]! @scalarList(strategy: RELATION)
  type: [Type]! @scalarList(strategy: RELATION)
  categories: [Category]! @scalarList(strategy: RELATION)
  size: String
  color: String!
  brand: String!
  nbViews: Int
  parcelType: String!
  nbInterested: Int
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}
