// enums
enum Category {
    WOMEN
    MEN
    CHILDREN
    HOME
}

enum Type {
    CLOTHES
    SHOES
    ACCESSORIES
    DECORATION
}

enum Condition {
    NEW
    VG_CONDITION
    G_CONDITION
}

// data model
model User {
    id               String
    firstName        String?
    lastName         String?
    password         String
    token            String     @unique
    tempToken        String?    @unique
    resetTokenExpiry Float?
    userName         String     @unique
    email            String     @unique
    profilePicture   String?
    location         Location[]
    items            Item[]
    isAdmin          Boolean    @default(value: false)
    isVerified       Boolean    @default(value: false)
    createdAt        DateTime   @default(now())
    updatedAt        DateTime   @default(now())
}

model Location {
    id         String   @id
    number     Int
    street     String
    city       String
    country    String
    postalCode Int
    createdAt  DateTime @default(now())
    updatedAt  DateTime @default(now())
    User       User?    @relation(fields: [userToken], references: [token])
    userToken  String?
}

model Item {
    id           String     @id
    title        String
    description  String
    imagesUrl    String
    thumbnail    String
    price        Float
    user         User[]
    condition    Condition?
    type         Type
    categories   Category
    size         String
    color        String
    brand        String
    nbViews      Int        @default(0)
    parcelType   String?
    nbInterested Int        @default(0)
    createdAt    DateTime   @default(now())
    updatedAt    DateTime   @default(now())
}